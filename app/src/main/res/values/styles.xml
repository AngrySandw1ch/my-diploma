<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settings_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="settings_fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginEnd">@dimen/ordinary_margin</item>
        <item name="android:layout_marginBottom">@dimen/ordinary_margin</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:elevation">6dp</item>
        <item name="android:focusable">true</item>
        <item name="android:src">@drawable/ic_add_24</item>
    </style>
</resources>